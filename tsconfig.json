{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es7"],
    "moduleResolution": "node"
  },
  "exclude": ["build", "node_modules"]
}
