{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "moduleResolution": "node"
  },
  "exclude": ["build", "node_modules"]
}
